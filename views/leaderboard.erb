<div class="page-header">
  <h1>All-time Leaderboard</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Github</th>
      <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% @cadet_leaders.each_with_index do |c, index| %>
      <% url = "/profile/#{c[:user].github_login}" %>
      <% if c[:points] > 0 %>
        <tr>
          <td><%= index + 1 %></td>
          <td><a href="<%= url %>"><%= c[:user].github_login %></a></td>
          <td><%= c[:points] %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
