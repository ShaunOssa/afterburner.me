<div style="height:80px; width: 100%; background-color: #2c2c2c; position: absolute;"></div>
<section class="pagetitle">
  <!-- BEGIN: ABOUT TITLE -->
  <div class="section-title row text-center">
    <h2>Decorate</h2>
    <div class="divider-grey"></div>
  </div>
  <!-- END -->
</section>

<section>
  <div class="text-center">
    <%= session[:error] %>
    <%= session[:message] %>
  </div>
</section>

<!-- BEGIN BLOG 1 COLUMN -->
<section id="blog" class="blog-single light-section nopadding">
  <!-- BEGIN CONTAINER -->
  <div class="container single">

    <!-- BEGIN SINGLE CONTENT COLUM -->
    <div class="col-md-12">

      <!-- BEGIN BLOG POST -->
      <div class="blog-post isotope-item">
        <!-- BEGIN POST CONTENT -->
        <div class="post-content">
          <form method="POST" action="/medals/decorate">
            <label>Pick a User</label><br>
            <% for u in @users do %>
              <input type="radio" name="github_login" value="<%= u.github_login %>"> <%= u.name %> (<%= u.github_login %>)<br/>
            <% end %>
            <label>Pick a Medal</label><br>
            <% for m in @medals do %>
              <input type="radio" name="medal_id" value="<%= m.id %>"> <%= m.name %> (<%= m.description %>)<br/>
            <% end %>
            <div class="text-center">
              <button class="des-button-dark des-button-dark-1 des-button-dark-1d" onclick="form.submit()"><span>Decorate</span></button>
            </div>
          </form>
        </div>
        <!-- END POST CONENT -->
      </div>
      <!-- END BLOG POST -->
    </div>
    <!-- END SINGLE CONTENT COLUMN -->
  </div>
  <!-- END CONTAINER -->
</section>
